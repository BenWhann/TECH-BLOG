
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <p>
      <span href="/post/{{post.id}}" class="title">{{post.title}}</span>
    </p>
    <p>Created by {{user.name}}</p>
  </div>
  <div class="col-md-7">
    <p class="body">{{post.body}}</p>
  </div>
</div>
{{/each}}