<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{body}}</p>
  <p>Created by {{user.name}}</p>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{comment}}</a></h4>
      </div>
      {{!-- <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE POST</button>
      </div> --}}
    </div>
    {{/each}}

    <h3>Leave a comment:</h3>

    <form class="form" id="new-comment-form">
      <div class="form-group">
        <label for="comment-body">Comment Body:</label>
        <textarea class="form-input" id="comment-body" name="comment-body"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">COMMENT</button>
      </div>
    </form>
  </div>

  <p>
    <button class="btn btn-primary"></button>
  </p>
</div>

<script src="./js/post.js"></script>